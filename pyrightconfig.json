{
  "typeCheckingMode": "strict",
  "venvPath": ".",
  "venv": ".venv",
  "include": ["src"],
  "ignore": [
    "scripts/**",
    "tests/**",
    "debug_ephemeris.py",
    "Docs/**",
    "wiki/**",
    "data/**",
    "saved_documents/**",
    "experiments/**",
    "anamnesis/**",
    "workflow_scripts/**"
  ],
  "exclude": [
    ".venv/**",
    "**/.venv/**",
    "**/site-packages/**",
    "**/node_modules/**",
    "**/__pycache__/**",
    "scripts/**",
    "tests/**",
    "data/**",
    "Docs/**",
    "wiki/**",
    "saved_documents/**",
    "experiments/**",
    "anamnesis/**",
    "workflow_scripts/**"
  ]
}
